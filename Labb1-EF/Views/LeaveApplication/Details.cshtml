@model Labb1_EF.Models.LeaveApplication

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2>Detaljer</h2>

    <hr />

    <a asp-action="Edit" asp-route-id="@Model.ApplicationId" class="text-decoration-none text-black-50">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-fill" viewBox="0 0 16 16">
            <path d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11z" />
        </svg> Redigera
    </a>

    <div class="row">
        <div class="col-md-7">
            <dl class="row mt-4">
                <dt class="col-sm-3 mt-3">
                    Ansökningsdatum
                </dt>
                <dd class="col-sm-9 mt-3">
                    @Html.DisplayFor(model => model.AppliedDate)
                </dd>

                <dt class="col-sm-3 mt-3">
                    Startdatum
                </dt>
                <dd class="col-sm-9 mt-3">
                    @Html.DisplayFor(model => model.StartDate)
                </dd>

                <dt class="col-sm-3 mt-3">
                    Slutdatum
                </dt>
                <dd class="col-sm-9 mt-3">
                    @Html.DisplayFor(model => model.EndDate)
                </dd>

                <dt class="col-sm-3 mt-3">
                    Ledighetstyp
                </dt>
                <dd class="col-sm-9 mt-3">
                    @Html.DisplayFor(model => model.LeaveType)
                </dd>

                <dt class="col-sm-3 mt-3">
                    Ansökningsstatus
                </dt>
                <dd class="col-sm-9 mt-3">
                    @if (Model.ApplicationStatus == Labb1_EF.Models.ApplicationStatus.Godkänd)
                    {
                        <span style="font-weight: bold; color:#597D35;">
                            @Html.DisplayFor(model => model.ApplicationStatus)
                        </span>
                    }
                    else if (Model.ApplicationStatus == Labb1_EF.Models.ApplicationStatus.Nekad)
                    {
                        <span style="font-weight: bold; color:#A21A00;">
                            @Html.DisplayFor(model => model.ApplicationStatus)
                        </span>
                    }
                    else
                    {
                        @Html.DisplayFor(model => model.ApplicationStatus)
                    }
                </dd>
            </dl>

            <div class="mt-md-5">
                <a class="text-decoration-none text-black-50" asp-action="Index">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left-short" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M12 8a.5.5 0 0 1-.5.5H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H11.5a.5.5 0 0 1 .5.5" />
                    </svg> Gå till mina ansökningar
                </a>
            </div>
        </div>

        <div class="col-md-5">
            <img src="/img/details.jpg" class="img-fluid" alt="details" />
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
